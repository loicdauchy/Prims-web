{% extends 'base.html.twig' %}
{% block title %}
        Connexion
{% endblock %}

{% block body %}

    <form action="{{ path('loginForm') }}" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="E-mail" required name="_username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
                    </div>
                    <input type="hidden" name="_target_path" value="{{ path('commerceUser') }}"/>
                    {# <input type="hidden" name="_failure_path" value="{{ path('forgot_password') }}"/> #}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
    </form>

{% endblock %}